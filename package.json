{
  "name": "portfolio-dev",
  "type": "module",
  "version": "2.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "type-check": "astro check",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:ci": "biome lint .",
    "lint:ci:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "validate": "bun run type-check && bun run lint && bun run build",
    "build:analyze": "astro build --verbose",
    "build:prod": "npm run build",
    "type-check:watch": "astro check --watch",
    "clean": "node -e \"const fs=require('fs');['dist','.astro'].forEach(d=>fs.rmSync(d,{recursive:true,force:true}))\"",
    "clean:cache": "node -e \"const fs=require('fs');['node_modules/.vite','.astro/cache'].forEach(d=>fs.rmSync(d,{recursive:true,force:true}))\"",
    "clean:all": "bun run clean && node -e \"const fs=require('fs');fs.rmSync('node_modules',{recursive:true,force:true})\"",
    "reset": "bun run clean:all && bun install",
    "optimize": "bun run clean:cache && bun run build:prod",
    "ci:build": "npm run build",
    "ci:lint": "npx @biomejs/biome check .",
    "ci:type-check": "npm run type-check",
    "ci:validate": "npm run ci:type-check && npm run ci:lint && npm run ci:build",
    "prepare": "husky || true",
    "pre-commit": "bun run lint && bun run type-check",
    "commit": "bun run pre-commit && git add . && git commit",
    "hooks:install": "husky",
    "hooks:test": "echo 'Testing pre-commit hook...' && bun run pre-commit",
    "dev:analyze": "node scripts/dev-helper.js analyze",
    "dev:deps": "node scripts/dev-helper.js deps",
    "dev:size": "node scripts/dev-helper.js size",
    "dev:health": "node scripts/dev-helper.js health",
    "dev:help": "node scripts/dev-helper.js help",
    "debug:build": "npm run build:analyze",
    "debug:deps": "bun pm ls --depth=0",
    "debug:outdated": "bun outdated",
    "debug:audit": "bun audit",
    "debug:cache": "bun pm cache rm"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/preact": "^4.1.1",
    "@astrojs/sitemap": "^3.5.1",
    "astro": "^5.13.5",
    "preact": "^10.27.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@biomejs/biome": "2.2.2",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.9",
    "husky": "^9.1.7",
    "lightningcss": "^1.30.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1"
  }
}
