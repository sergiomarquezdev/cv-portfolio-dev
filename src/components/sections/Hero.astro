---
/**
 * Hero.astro - Componente principal de encabezado del portfolio
 *
 * Características:
 * - Muestra información principal del perfil: nombre, título, ubicación
 * - Incluye enlaces a redes sociales y correo electrónico
 * - Implementa diseño responsivo centrado y limpio
 * - Separa el contenido para impresión y visualización web
 * - Diseño minimalista enfocado en el contenido textual
 */
import { basics } from "@cv";
import Section from "../Section.astro";
import {
  MailIcon as Mail,
  XIcon as X,
  LinkedInIcon as LinkedIn,
  GitHubIcon as GitHub,
  WorldMapIcon as WorldMap,
  BlogIcon as Blog,
  type SocialIcon,
} from "@/icons";

const { name, label, location, profiles, email } = basics;
const { city, region } = location;

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
  X,
};

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn");
const linkedUrl = linkedInfo?.url;

const printInfo = [email, linkedUrl].filter(Boolean).join(" • ");
---

<!-- Hero section con diseño centrado y minimalista -->
<div
  class="bg-gradient-to-r from-white to-gray-100 dark:from-dark dark:to-dark-card dark:bg-none shadow-sm pt-[4.5rem] sm:pt-24 md:pt-28 lg:pt-32"
>
  <Section class="py-8 sm:py-12 md:py-16 lg:py-20">
    <!-- Contenedor principal centrado -->
    <div class="flex flex-col items-center justify-center text-center max-w-4xl mx-auto">
      <!-- Contenido de texto centrado -->
      <div class="flex flex-col items-center gap-3 sm:gap-4 md:gap-5 lg:gap-6">
        <!-- Nombre como H1 para SEO -->
        <h1
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-secondary-dark dark:text-white"
        >
          {name}
        </h1>

        <!-- Titular (puesto o especialidad) como H2 -->
        <h2
          class="text-xl sm:text-2xl md:text-3xl lg:text-4xl text-secondary dark:text-gray-300 font-medium max-w-4xl"
        >
          {label}
        </h2>

        <!-- Localización -->
        <span
          class="flex items-center gap-2 justify-center text-gray-700 dark:text-gray-400 text-lg sm:text-xl"
        >
          <WorldMap />
          {city}, {region}
        </span>

        <!-- Información en versión de impresión -->
        <div class="print text-gray-700 dark:text-gray-400 text-lg">
          {printInfo}
        </div>

        <!-- Enlaces a redes sociales y correo -->
        <nav
          class="no-print mt-4 sm:mt-6 md:mt-8 flex flex-wrap gap-3 md:gap-4 justify-center"
          aria-label="Redes sociales y contacto"
        >
          {
            email && (
              <a
                href={`mailto:${email}`}
                title={`Enviar un correo a ${email}`}
                aria-label={`Enviar un correo a ${name} (${email})`}
                target="_blank"
                rel="noopener noreferrer"
                class="flex h-12 w-12 sm:h-14 sm:w-14 md:h-16 md:w-16 items-center justify-center rounded-full border border-gray-200 dark:border-gray-700 bg-white dark:bg-dark-card transition-all hover:bg-primary hover:text-white hover:shadow-lg focus:outline-primary focus:outline-offset-2 hover:no-underline"
              >
                <Mail class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8" />
              </a>
            )
          }
          {
            profiles.map(({ network, url }) => {
              const Icon = SOCIAL_ICONS[network];
              return (
                <a
                  href={url}
                  title={`Visitar el perfil de ${name} en ${network}`}
                  aria-label={`Visitar el perfil de ${name} en ${network}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex h-12 w-12 sm:h-14 sm:w-14 md:h-16 md:w-16 items-center justify-center rounded-full border border-gray-200 dark:border-gray-700 bg-white dark:bg-dark-card transition-all hover:bg-primary hover:text-white hover:shadow-lg focus:outline-primary focus:outline-offset-2 hover:no-underline"
                >
                  <Icon class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8" />
                </a>
              );
            })
          }
          <!-- Enlace al blog -->
          <a
            href="https://blog.sergiomarquez.dev"
            class="flex h-12 w-12 sm:h-14 sm:w-14 md:h-16 md:w-16 items-center justify-center rounded-full border border-gray-200 dark:border-gray-700 bg-green-50 dark:bg-green-800 text-gray-800 dark:text-white transition-all hover:bg-green-500 hover:text-white hover:shadow-lg focus:outline-primary focus:outline-offset-2 hover:no-underline"
            title="Visitar mi blog"
            aria-label="Visitar mi blog"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Blog class="w-6 h-6 sm:w-7 sm:h-7 md:w-8 md:h-8" />
          </a>
        </nav>
      </div>
    </div>
  </Section>
</div>
