---
import GitHub from "@/icons/GitHub.astro"
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Proyectos">
    <ul>
        {projects.map(({ name, description, highlights, url, github, isActive }) => (
                <li>
                    <article>
                        <header>
                            <h3>
                                {url ? (
                                        <a href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                                            {name}
                                        </a>
                                ) : (
                                        <span class="proyect-name-span">{name}</span>
                                )}
                                {isActive && <span>•</span>}
                                {github && github.map(link => (
                                        <a href={link} target="_blank" class="github-link" title={`Ver el código fuente de ${name}`}>
                                            <GitHub />
                                        </a>
                                ))}
                            </h3>
                            <p>{description}</p>
                        </header>
                        <footer>
                            {highlights.map((highlight) => {
                                return <span>{highlight}</span>
                            })}
                        </footer>
                    </article>
                </li>
        ))}
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
        margin-inline: -16px;
    }

    article {
        border-radius: 10px;
        border: 1px solid #e0e0e0;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 20px;
        height: 100%;
        background: #f4f4f4;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

    article header {
        flex: 1;
    }

    article h3 {
        margin-bottom: 8px;
        font-size: 1.25rem;
    }

    article a {
        color: #111;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    article a:hover {
        text-decoration: underline;
        color: #2980b9;
    }

    article p {
        font-size: 0.875rem;
        line-height: 1.4rem;
        margin-bottom: 8px;
    }

    article h3 span {
        color: #00bc2f;
        animation-name: flicker;
        animation-duration: 3s;
        animation-timing-function: ease-in;
        animation-iteration-count: infinite;
    }

    article h3 .proyect-name-span {
        color: #000;
        animation: none;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
        font-size: 0.75rem;
    }

    footer span {
        border-radius: 6px;
        background: #eee;
        color: #444;
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.3rem 0.6rem;
    }

    .github-code-link {
        margin-left: 8px;
    }

    @keyframes flicker {
        0% {
            opacity: 1;
        }
        50% {
            opacity: 0.25;
        }
        100% {
            opacity: 1;
        }
    }

    @media (max-width: 700px) {
        ul {
            margin-inline: 0px;
        }

        article {
            border: none;
            box-shadow: 0 1px 1px #e0e0e0;
            padding: 16px;
        }

        footer {
            font-size: 0.7rem;
        }
    }

    @media print {
        article h3 span {
            animation-name: none;
        }
    }
</style>
