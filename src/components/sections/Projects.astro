---
/**
 * Projects.astro - Componente para mostrar la lista de proyectos
 *
 * Características:
 * - Muestra proyectos en formato de tarjetas en una cuadrícula responsive
 * - Cada tarjeta incluye nombre, descripción completa, etiquetas de tecnologías
 * - Enlaces a GitHub y al proyecto en vivo cuando están disponibles
 * - Diseño adaptativo: 1 columna en móvil, 2 en tablet, 3 en desktop
 * - Las tarjetas utilizan flexbox para posicionar los enlaces en la parte inferior
 */
import { GitHubIcon } from "@/icons";
import Section from "../Section.astro";
import { projects } from "@cv";

const { title } = Astro.props;
---

<Section title={title || "Proyectos"} id="proyectos">
  <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
    {
      projects.map(({ name, description, highlights, url, github }) => (
        <article class="relative flex h-full flex-col overflow-hidden rounded-xl bg-card p-5 shadow-lg transition hover:transform hover:-translate-y-1">
          <h3 class="mb-2 text-xl font-semibold text-text-main">{name}</h3>
          <p class="mb-4 text-sm text-text-muted">{description}</p>

          <div class="mb-4 flex flex-wrap gap-2">
            {highlights.map((tag) => (
              <span class="rounded-full bg-primary/20 px-3 py-1 text-xs font-medium text-primary-light">
                {tag}
              </span>
            ))}
          </div>

          <div class="mt-auto flex items-center gap-4 pt-4">
            {github && (
              <a
                href={typeof github === "string" ? github : Array.isArray(github) ? github[0] : ""}
                target="_blank"
                rel="noopener noreferrer"
                class="rounded-md p-2 text-text-muted transition-colors hover:text-primary-light"
                aria-label={`GitHub de ${name}`}
                title={`Ver código en GitHub de ${name}`}
              >
                <GitHubIcon class="h-6 w-6" />
              </a>
            )}
            {url && (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm font-semibold text-link transition hover:text-primary"
                aria-label={`Visitar ${name}`}
              >
                Visitar →
              </a>
            )}
          </div>
        </article>
      ))
    }
  </div>
</Section>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
    margin-inline: 0;
    padding: 0;
    list-style: none;
  }

  .project-item {
    transition: transform 0.3s ease;
  }

  .project-item:hover {
    transform: translateY(-5px);
  }

  .active-indicator {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0% {
      opacity: 0.7;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0.7;
    }
  }

  .skill-tag {
    display: inline-block;
    background: #f0f0f0;
    color: #555;
    padding: 0.3rem 0.6rem;
    border-radius: 50px;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .skill-tag:hover {
    background: #e0e0e0;
  }

  /* Estilos para modo oscuro */
  :global(.dark) .skill-tag {
    background: #2a2a2a;
    color: #e0e0e0;
  }

  :global(.dark) .skill-tag:hover {
    background: #333333;
  }

  @media (max-width: 700px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }
</style>
