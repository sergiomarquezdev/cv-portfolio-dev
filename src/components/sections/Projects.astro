---
/**
 * Projects.astro - Componente para mostrar la lista de proyectos
 *
 * Características:
 * - Muestra proyectos en formato de tarjetas en una cuadrícula responsive
 * - Cada tarjeta incluye nombre, descripción completa, etiquetas de tecnologías
 * - Enlaces a GitHub y al proyecto en vivo cuando están disponibles
 * - Diseño adaptativo: 1 columna en móvil, 2 en tablet, 3 en desktop
 * - Las tarjetas utilizan flexbox para posicionar los enlaces en la parte inferior
 */
import { GitHubIcon } from "@/icons";
import Section from "../Section.astro";
import { projects } from "@cv";

const { title } = Astro.props;
---

<Section title={title || "Proyectos"} id="proyectos">
  <div class="grid grid-cols-1 gap-m sm:grid-cols-2 lg:grid-cols-3">
    {
      projects.map(({ name, description, highlights, url, github }, index) => (
        <article
          class="flex h-full flex-col rounded-lg bg-fondo-secundario p-m border border-borde-principal shadow-lg transition-all duration-300 hover:scale-103 hover:shadow-card-hover hover:border-borde-hover project-card"
          data-index={index}
        >
          {/* ✅ PERFORMANCE: Placeholder for future project screenshots */}
          <div class="mb-s h-48 bg-gradient-to-br from-azul-oscuro/20 to-cian-acento/10 rounded-md border border-borde-principal flex items-center justify-center">
            <div class="text-center text-texto-sutil">
              <svg
                class="w-12 h-12 mx-auto mb-2 opacity-50"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z"
                  clip-rule="evenodd"
                />
              </svg>
              <p class="text-sm">Imagen del proyecto</p>
            </div>
          </div>

          <h3 class="mb-s text-h4 font-semibold text-texto-principal">{name}</h3>
          <p class="mb-s text-body-reg text-texto-secundario flex-grow">{description}</p>

          <div class="mb-m flex flex-wrap gap-2">
            {highlights.map((tag) => (
              <span class="rounded-md bg-badge-fondo px-3 py-1 text-xs font-medium text-badge-texto border border-badge-borde">
                {tag}
              </span>
            ))}
          </div>

          <div class="mt-auto flex items-center gap-4 pt-s border-t border-borde-principal">
            {github && (
              <a
                href={typeof github === "string" ? github : Array.isArray(github) ? github[0] : ""}
                target="_blank"
                rel="noopener noreferrer"
                class="rounded-md p-2 text-texto-desactivado transition-all duration-200 hover:text-texto-principal hover:scale-110 focus:outline-none focus:ring-2 focus:ring-azul-principal focus:ring-offset-2 focus:ring-offset-fondo-secundario"
                aria-label={`GitHub de ${name}`}
                title={`Ver código en GitHub de ${name}`}
              >
                <GitHubIcon class="h-6 w-6" />
              </a>
            )}
            {url && (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm font-semibold text-cian-acento transition-all duration-200 hover:text-azul-principal hover:underline focus:outline-none focus:ring-2 focus:ring-azul-principal focus:ring-offset-2 focus:ring-offset-fondo-secundario"
                aria-label={`Visitar ${name}`}
              >
                Visitar →
              </a>
            )}
          </div>
        </article>
      ))
    }
  </div>
</Section>

<style>
  /* ✅ PERFORMANCE: Optimize project card animations */
  .project-card {
    transform: translateZ(0); /* Force GPU acceleration */
    will-change: transform, box-shadow;
  }

  /* ✅ ACCESSIBILITY: Reduce motion support */
  @media (prefers-reduced-motion: reduce) {
    .project-card {
      transition: none;
    }

    .project-card:hover {
      transform: none;
    }
  }

  /* ✅ PERFORMANCE: Optimize for mobile */
  @media (max-width: 640px) {
    .project-card:hover {
      transform: none; /* Disable hover effects on mobile */
    }
  }
</style>

<script>
  // ✅ PERFORMANCE: Intersection Observer for lazy loading animations
  document.addEventListener("DOMContentLoaded", () => {
    if ("IntersectionObserver" in window && window.lazyLoadObserver) {
      const projectCards = document.querySelectorAll(".project-card");

      projectCards.forEach((card, index) => {
        // Add small delay based on card index for stagger effect
        card.style.animationDelay = `${index * 100}ms`;
        window.lazyLoadObserver.observe(card);
      });
    }
  });
</script>
