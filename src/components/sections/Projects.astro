---
/**
 * Projects.astro - Componente para mostrar la lista de proyectos
 *
 * Características:
 * - Muestra proyectos en formato de tarjetas en una cuadrícula responsive
 * - Cada tarjeta incluye nombre, descripción completa, etiquetas de tecnologías
 * - Enlaces a GitHub y al proyecto en vivo cuando están disponibles
 * - Diseño adaptativo: 1 columna en móvil, 2 en tablet, 3 en desktop
 * - Las tarjetas utilizan flexbox para posicionar los enlaces en la parte inferior
 */
import { GitHubIcon } from "@/icons";
import Section from "../Section.astro";
import { projects } from "@cv";

const { title } = Astro.props;
---

<Section title={title || "Proyectos"} id="proyectos">
  <div class="grid grid-cols-1 gap-m sm:grid-cols-2 lg:grid-cols-3">
    {
      projects.map(({ name, description, highlights, url, github }) => (
        <article class="flex h-full flex-col rounded-lg bg-fondo-secundario p-m border border-borde-principal shadow-lg transition-all duration-300 hover:scale-103 hover:shadow-card-hover hover:border-borde-hover">
          <h3 class="mb-s text-h4 font-semibold text-texto-principal">{name}</h3>
          <p class="mb-s text-body-reg text-texto-secundario">{description}</p>

          <div class="mb-m flex flex-wrap gap-2">
            {highlights.map((tag) => (
              <span class="rounded-md bg-badge-fondo px-3 py-1 text-xs font-medium text-badge-texto border border-badge-borde">
                {tag}
              </span>
            ))}
          </div>

          <div class="mt-auto flex items-center gap-4 pt-s border-t border-borde-principal">
            {github && (
              <a
                href={typeof github === "string" ? github : Array.isArray(github) ? github[0] : ""}
                target="_blank"
                rel="noopener noreferrer"
                class="rounded-md p-2 text-texto-desactivado transition-colors hover:text-texto-principal"
                aria-label={`GitHub de ${name}`}
                title={`Ver código en GitHub de ${name}`}
              >
                <GitHubIcon class="h-6 w-6" />
              </a>
            )}
            {url && (
              <a
                href={url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm font-semibold text-cian-acento transition hover:text-azul-principal"
                aria-label={`Visitar ${name}`}
              >
                Visitar →
              </a>
            )}
          </div>
        </article>
      ))
    }
  </div>
</Section>
