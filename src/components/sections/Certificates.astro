---
import Section from "../Section.astro";
import { certificates } from "@cv";
import { CertificateIcon as Certificate } from "@/icons";
---

<Section title="Certificados">
  <ul class="space-y-l">
    {
      certificates.map(({ name, date, issuer, url }) => {
        const dateObj = new Date(date);
        const formattedDate = dateObj.toLocaleDateString("es-ES", {
          year: "numeric",
          month: "long",
        });

        return (
          <li class="relative pl-l">
            <span class="absolute left-0 top-1 h-3 w-3 rounded-full bg-electric-blue" />
            <div class="absolute left-[5.5px] top-4 h-full w-px bg-border-gray" />

            <article>
              <header class="mb-s flex flex-col items-start justify-between gap-2 md:flex-row md:items-center">
                <div class="flex-1">
                  <h3 class="text-h4 font-semibold text-primary-text">{name}</h3>
                  <p class="mt-1 text-body-reg text-muted-text">Emitido por {issuer}</p>
                </div>
                <time
                  class="text-sm font-medium text-secondary-text"
                  datetime={dateObj.toISOString().split("T")[0]}
                >
                  {formattedDate}
                </time>
              </header>

              <footer class="mt-s">
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 rounded-md bg-dark-surface px-4 py-2 text-sm font-semibold text-secondary-text transition hover:bg-slate-blue hover:text-primary-text border border-border-gray"
                >
                  <Certificate class="h-5 w-5" /> Ver Certificado
                </a>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>
