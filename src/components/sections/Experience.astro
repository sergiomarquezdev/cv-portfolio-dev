---
import { work } from "@cv";
import Section from "../Section.astro";
---

<Section title="Experiencia laboral" id="experiencia">
  <div class="relative">
    <!-- Timeline line -->
    <div
      class="absolute left-4 md:left-8 lg:left-1/2 lg:-translate-x-1/2 h-full w-0.5 bg-gradient-to-b from-primary/50 via-background-surface to-background-surface"
    >
    </div>

    <div class="space-y-xxl">
      {
        work.map(
          (
            {
              company,
              startDate,
              endDate,
              position,
              summary,
              highlights,
              website,
            },
            index
          ) => {
            const startDateObj = new Date(startDate);
            const endDateObj = endDate ? new Date(endDate) : null;
            const startYearMonth = startDateObj.toLocaleString('es-ES', {
              year: 'numeric',
              month: 'short',
            });
            const endYearMonth = endDateObj
              ? endDateObj.toLocaleString('es-ES', {
                  year: 'numeric',
                  month: 'short',
                })
              : 'Actual';

            const isLeft = index % 2 === 0;
            const alignmentClasses = isLeft
              ? 'lg:justify-start'
              : 'lg:justify-end';
            const articleMargin = isLeft ? 'lg:mr-auto' : 'lg:ml-auto';

            return (
              <div
                class:list={`relative flex items-center md:pl-20 lg:pl-0 ${alignmentClasses}`}
              >
                {/* Timeline dot */}
                <div class="absolute left-4 md:left-8 lg:left-1/2 -translate-x-1/2 w-3 h-3 rounded-full bg-primary border-4 border-background-surface" />

                <article
                  class:list={`w-full lg:w-[45%] p-m rounded-lg bg-background-surface shadow-lg border border-border ${articleMargin}`}
                >
                  <header class="mb-s">
                    <div class="flex flex-col">
                      <div class="flex justify-between items-center mb-1">
                        <h3 class="text-h4 font-bold text-text">
                          <a
                            href={website}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="hover:text-primary transition-colors"
                          >
                            {company}
                          </a>
                        </h3>
                        <time class="text-sm text-text-muted font-medium">
                          {startYearMonth} - {endYearMonth}
                        </time>
                      </div>
                      <h4 class="text-body-lg font-medium text-text-muted">
                        {position}
                      </h4>
                    </div>
                  </header>

                  <div>
                    <p class="text-body-reg text-text-muted mb-m">{summary}</p>
                    <ul class="space-y-s">
                      {highlights.map(
                        ({
                          role,
                          startDate: rStart,
                          endDate: rEnd,
                          achievements,
                        }) => {
                          const roleStartDateObj = new Date(rStart);
                          const roleEndDateObj = rEnd ? new Date(rEnd) : null;
                          const roleStart = roleStartDateObj.toLocaleString(
                            'es-ES',
                            {
                              month: 'short',
                              year: 'numeric',
                            }
                          );
                          const roleEnd = roleEndDateObj
                            ? roleEndDateObj.toLocaleString('es-ES', {
                                month: 'short',
                                year: 'numeric',
                              })
                            : 'Actual';

                          return (
                            <li class="pl-s border-l-2 border-border">
                              <strong class="font-semibold text-text block mb-1">
                                {role} ({roleStart} - {roleEnd})
                              </strong>
                              <ul class="space-y-1">
                                {achievements.map(achievement => (
                                  <li class="flex items-start">
                                    <span class="text-primary mr-2 mt-1">
                                      &#8226;
                                    </span>
                                    <span class="text-text-muted">
                                      {achievement}
                                    </span>
                                  </li>
                                ))}
                              </ul>
                            </li>
                          );
                        }
                      )}
                    </ul>
                  </div>
                </article>
              </div>
            );
          }
        )
      }
    </div>
  </div>
</Section>
