---
import Section from "../Section.astro"
import { work } from "@cv"
---

<Section title="Experiencia laboral">
  <ul class="experience-list">
    {work.map(({ company, startDate, endDate, position, summary, highlights, website }) => {
      const startYearMonth = new Date(startDate).toLocaleString("es-ES", { year: "numeric", month: "short" })
      const endYearMonth = endDate != null ? new Date(endDate).toLocaleString("es-ES", { year: "numeric", month: "short" }) : "Actual"

      return (
          <li class="experience-item">
            <article>
              <header>
                <div>
                  <h3>
                    <a href={website} title={`Ver ${company}`} target="_blank">
                      {company}
                    </a>
                  </h3>
                  <h4>{position}</h4>
                </div>

                <div class="experience-dates">
                  <time datetime={startDate} data-title={startDate}>
                    {startYearMonth}
                  </time>
                  {" - "}
                  <time datetime={endDate} data-title={endDate}>
                    {endYearMonth}
                  </time>
                </div>
              </header>

              <footer>
                <p>{summary}</p>
                <ul class="highlights-list">
                  {highlights.map(({role, startDate, endDate, achievements}) => {
                    const roleStartYearMonth = new Date(startDate).toLocaleString("es-ES", {
                      year: "numeric",
                      month: "short"
                    })
                    const roleEndYearMonth = endDate != null ? new Date(endDate).toLocaleString("es-ES", {
                      year: "numeric",
                      month: "short"
                    }) : "Actual"

                    return (
                        <li class="highlight-item">
                          <strong>{role} ({roleStartYearMonth} - {roleEndYearMonth})</strong>
                          <ul class="achievements-list">
                            {achievements.map(achievement => (
                                <li>{achievement}</li>
                            ))}
                          </ul>
                        </li>
                    )
                  })}
                </ul>
              </footer>
            </article>
          </li>
      )
    })}
  </ul>
</Section>

<style>
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 40px;
    padding: 0;
    list-style: none;
  }

  .experience-item {
    border-left: 5px solid #2980b9;
    padding-left: 20px;
  }

  .experience-item article {
    background: #f4f4f4;
    padding: 24px;
    border-radius: 10px;
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
  }

  .experience-item h3 {
    font-weight: 700;
    color: #2c3e50;
    font-size: 1.5rem;
  }

  .experience-item h4 {
    color: #5d6d7e;
    margin-top: 4px;
  }

  .experience-item a {
    color: #2980b9;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .experience-item a:hover {
    color: #1e3a8a;
    text-decoration: underline;
  }

  .experience-dates {
    color: #95a5a6;
    font-size: 0.9rem;
  }

  .experience-dates time {
    display: inline-block;
  }

  .experience-item p {
    margin-bottom: 16px;
    color: #34495e;
    font-size: 1rem;
  }

  .highlights-list {
    margin-top: 12px;
    padding-left: 24px;
  }

  .highlight-item {
    margin-bottom: 16px;
  }

  .highlight-item strong {
    font-weight: 600;
    color: #4a4a4a;
  }

  .achievements-list {
    list-style-type: disc;
    padding-left: 24px;
    margin-top: 8px;
  }

  .achievements-list li {
    margin-bottom: 8px;
    color: #7f8c8d;
    font-size: 0.95rem;
  }

  @media (max-width: 700px) {
    .experience-dates {
      text-align: right;
    }

    .experience-item {
      border-left: 4px solid #2980b9;
      padding-left: 12px;
    }

    .experience-item header {
      flex-direction: column;
    }

    .experience-dates {
      margin-top: 12px;
    }
  }
</style>
