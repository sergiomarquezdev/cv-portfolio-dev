// âœ… UX IMPROVEMENT: Destacar tecnologÃ­as clave
const highlightKeywords = (text: string) => {
  const keywords = [
    "Java",
    "Spring Framework",
    "Angular",
    "Python",
    "Go",
    "Docker",
    "Kubernetes",
    "Google Cloud",
    "PostgreSQL",
    "Oracle SQL",
    "MySQL",
    "inteligencia artificial",
    "CI/CD",
    "Node.js",
    "backend",
    "fullstack",
    "APIs",
  ];

  let highlightedText = text;
  keywords.forEach((keyword) => {
    const regex = new RegExp(`\\b${keyword}\\b`, "gi");
    highlightedText = highlightedText.replace(
      regex,
      `<strong class="text-azul-principal font-semibold transition-colors duration-200 hover:text-cian-acento">${keyword}</strong>`
    );
  });

  return highlightedText;
};
