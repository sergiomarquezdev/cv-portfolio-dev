---
/**
 * Section.astro - Componente base para secciones del portfolio
 *
 * Características:
 * - Proporciona estructura consistente para todas las secciones
 * - Implementa estilos comunes para títulos de sección
 * - Gestiona atributos de accesibilidad (aria-labelledby, aria-label)
 * - Genera automáticamente IDs para los encabezados basados en el título
 * - Utiliza slot para insertar contenido personalizado en cada sección
 */
const { title } = Astro.props;

// Generamos una ID para el encabezado si existe título
const headingId = title
  ? `section-heading-${title.replace(/\s+/g, "-").toLowerCase()}`
  : "";
---

<section
  aria-labelledby={title ? headingId : undefined}
  aria-label={!title ? "Sección sin título" : undefined}
  class="max-w-4xl mx-auto mb-8 px-6 md:px-8 lg:px-6"
>
  {title && <h2 id={headingId} class="section-title">{title}</h2>}
  <slot />
</section>
