---
import type { SectionProps } from '../types/components';

export interface Props extends SectionProps {}

const { title, customMargin = 'mb-8', class: className, id } = Astro.props;
const headingId = title
  ? `section-heading-${title.replace(/\s+/g, '-').toLowerCase()}`
  : '';
---

<section
  id={id}
  aria-labelledby={title ? headingId : undefined}
  aria-label={!title ? "Sección sin título" : undefined}
  class:list={[
    "max-w-6xl mx-auto px-6 md:px-8 lg:px-6",
    customMargin,
    className,
  ]}
>
  {
    title && title !== "Hero" && (
      <h2
        id={headingId}
        class="mb-l text-h2 font-bold text-primary border-l-4 border-primary pl-4"
      >
        {title}
      </h2>
    )
  }
  <slot />
</section>
