---
const { title, customMargin = "mb-8", class: className } = Astro.props;
const headingId = title ? `section-heading-${title.replace(/\s+/g, "-").toLowerCase()}` : "";
---

<section
  aria-labelledby={title ? headingId : undefined}
  aria-label={!title ? "Sección sin título" : undefined}
  class:list={["max-w-6xl mx-auto px-6 md:px-8 lg:px-6", customMargin, className]}
>
  {
    title && (
      <h2
        id={headingId}
        class="mb-l text-h2 font-bold bg-gradient-to-r from-electric-blue to-vibrant-purple bg-clip-text text-transparent"
      >
        {title}
      </h2>
    )
  }
  <slot />
</section>
