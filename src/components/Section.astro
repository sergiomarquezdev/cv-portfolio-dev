---
const { title } = Astro.props;

// Generamos una ID para el encabezado si existe título
const headingId = title
  ? `section-heading-${title.replace(/\s+/g, "-").toLowerCase()}`
  : "";
---

<section
  aria-labelledby={title ? headingId : undefined}
  aria-label={!title ? "Sección sin título" : undefined}
>
  {title && <h2 id={headingId}>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 900px;
    margin: 0 auto 3rem;
    padding: 0 1.5rem;
  }

  h2 {
    margin-bottom: 16px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 2rem;
    /* Color adicional si deseas unificar con tu paleta */
    color: #1d4e89;
  }

  h2:focus {
    outline: 2px solid #1d4e89;
    outline-offset: 4px;
  }

  @media (max-width: 700px) {
    section {
      margin-bottom: 2.5rem;
      padding: 0 1rem;
    }

    h2 {
      font-size: 1.75rem;
    }
  }
</style>
