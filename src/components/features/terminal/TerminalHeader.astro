---
/**
 * TerminalHeader.astro - Barra de t√≠tulo de la terminal con botones de control
 */
import { MinimizeIcon, MaximizeIcon, CloseIcon } from '@/icons';

interface Props {
  title?: string;
  isMaximized?: boolean;
}

const {
  title = "Terminal",
  isMaximized = false
} = Astro.props;
---

<div class="terminal-header px-5 py-3 flex justify-between items-center" style="background-color: #374151;">
  <div class="text-sm font-medium" style="color: #ffffff;">
    {isMaximized ? `${title} (Maximizada)` : title}
  </div>
  <div class="flex space-x-3">
    <button
      id="terminal-minimize"
      class="w-10 h-10 p-2 rounded-full bg-yellow-500 hover:bg-yellow-400 transition-all hover:scale-105 hover:shadow-sm active:scale-95 focus:outline-none relative flex items-center justify-center"
      title="Minimizar"
      aria-label="Minimizar terminal"
    >
      <MinimizeIcon class="w-4 h-4 text-yellow-800" />
    </button>
    <button
      id="terminal-maximize"
      class="w-10 h-10 p-2 rounded-full bg-green-500 hover:bg-green-400 transition-all hover:scale-105 hover:shadow-sm active:scale-95 focus:outline-none relative flex items-center justify-center"
      title="Maximizar"
      aria-label="Maximizar terminal"
      aria-pressed={isMaximized ? "true" : "false"}
    >
      <MaximizeIcon class="w-4 h-4 text-green-800" />
    </button>
    <button
      id="terminal-close"
      class="w-10 h-10 p-2 rounded-full bg-red-500 hover:bg-red-400 transition-all hover:scale-105 hover:shadow-sm active:scale-95 focus:outline-none relative flex items-center justify-center"
      title="Cerrar"
      aria-label="Cerrar terminal"
    >
      <CloseIcon class="w-4 h-4 text-red-800" />
    </button>
  </div>
</div>
