commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "âŒ Invalid commit message format!"
    echo ""
    echo "ğŸ“ Commit message should follow the format:"
    echo "   <type>[optional scope]: <description>"
    echo ""
    echo "ğŸ”§ Types: feat, fix, docs, style, refactor, perf, test, chore, ci, build, revert"
    echo ""
    echo "âœ… Examples:"
    echo "   feat: add new contact form"
    echo "   fix(ui): resolve button alignment issue"
    echo "   docs: update README with installation steps"
    echo "   chore: update dependencies"
    echo ""
    exit 1
fi

echo "âœ… Commit message format is valid"
